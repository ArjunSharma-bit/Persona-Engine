{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2021",
        "outDir": "dist",
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src/**/*"
    ]
}